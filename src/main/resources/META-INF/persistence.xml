<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             version="3.0">

    <persistence-unit name="UFood_PU" transaction-type="RESOURCE_LOCAL">
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
        <class>entidades.Usuario</class>
        <class>entidades.Comensal</class>
        <class>entidades.Restaurante</class>

        <properties>
            <!-- Datos de conexión -->
<!--            <property name="jakarta.persistence.jdbc.driver" value="com.mysql.cj.jdbc.Driver"/>-->
<!--            <property name="jakarta.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/tarea1"/>-->
<!--            <property name="jakarta.persistence.jdbc.user" value="root"/>-->
<!--            <property name="jakarta.persistence.jdbc.password" value="root"/>-->

            <!-- Configuración Hibernate -->
            <!--                        <property name="hibernate.dialect" value="org.hibernate.dialect.MySQLDialect"/>-->
            <!--                        <property name="hibernate.hbm2ddl.auto" value="update"/>-->
            <!--                        <property name="hibernate.show_sql" value="true"/>-->
            <property name="jakarta.persistence.jdbc.driver" value="com.mysql.cj.jdbc.Driver"/>
            <property name="jakarta.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/tu_basedatos"/>
            <property name="jakarta.persistence.jdbc.user" value="usuario"/>
            <property name="jakarta.persistence.jdbc.password" value="contraseña"/>

            <property name="hibernate.dialect" value="org.hibernate.dialect.MySQL8Dialect"/>
            <property name="hibernate.hbm2ddl.auto" value="update"/>
            <property name="hibernate.show_sql" value="true"/>
            <property name="hibernate.format_sql" value="true"/>

            <!-- Importante para evitar el error -->
            <property name="hibernate.enable_lazy_load_no_trans" value="true"/>
        </properties>
    </persistence-unit>
</persistence>
